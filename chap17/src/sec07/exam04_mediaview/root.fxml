<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="200" prefWidth="400"
            fx:controller="sec07.exam04_mediaview.RootController">
   <children>
      <StackPane layoutX="10" layoutY="14" prefHeight="170" prefWidth="270">
         <children>
            <ImageView fx:id="imageView" fitHeight="170" fitWidth="270" preserveRatio="true">
               <image>
                  <Image url="@media/audio.png" />
               </image>
            </ImageView>
            <MediaView fx:id="mediaView" fitHeight="170" fitWidth="270" preserveRatio="false" />
         </children>
      </StackPane>

      <Button fx:id="btnPlay"  layoutX="290" layoutY="14" prefHeight="23" prefWidth="95" text="재생" />
      <Button fx:id="btnPause" layoutX="290" layoutY="44" prefHeight="23" prefWidth="95" text="멈춤" />
      <Button fx:id="btnStop"  layoutX="290" layoutY="74" prefHeight="23" prefWidth="95" text="중지" />
   </children>
</AnchorPane>
