<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20" />
    </padding>
    
    <center>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label     text="이름"  prefWidth="50"  GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label     text="국어"  prefWidth="50"  GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label     text="수학"  prefWidth="50"  GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label     text="영어"  prefWidth="50"  GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField id="txtName" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField id="txtKor"  prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField id="txtMath" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField id="txtEng"  prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <BorderPane.margin>
                <Insets top="20" bottom="10" />
            </BorderPane.margin>

            <children>
                <Button id="btnFormSave"   text="저장" />
                <Button id="btnFormCancel" text="취소" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
